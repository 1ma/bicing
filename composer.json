{
    "name": "uma/bicing",
    "type": "project",
    "license": "MIT",
    "require": {
        "guzzlehttp/guzzle": "6.3.0",
        "slim/slim": "3.8.1",
        "slim/twig-view": "2.2.0",
        "justinrainbow/json-schema": "5.2.1"
    },
    "autoload": {
        "psr-4": {
            "UMA\\BicingStats\\": "src/"
        }
    },
    "scripts": {
        "up": [
            "@composer install --ignore-platform-reqs",
            "cp -n res/infrastructure/devel_settings.php app/settings.php",
            "cp -n res/infrastructure/devel_stack.yml docker-compose.yml",
            "docker-compose run --rm starter",
            "docker-compose exec -T pgsql sh -c \"psql -U postgres -d bicing_devel < /tmp/schema.sql\""
        ]
    }
}
