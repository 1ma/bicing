{
    "name": "uma/bicing",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "roave/security-advisories": "dev-master",

        "guzzlehttp/guzzle": "6.3.0",
        "justinrainbow/json-schema": "5.2.1",
        "monolog/monolog": "1.23.0",
        "slim/slim": "3.8.1",
        "slim/twig-view": "2.2.0"
    },
    "autoload": {
        "psr-4": {
            "UMA\\Bicing\\": "src/"
        }
    },
    "scripts": {
        "devel-setup": [
            "@composer install --ignore-platform-reqs",
            "cp -n res/infrastructure/devel_pre-commit.sh .git/hooks/pre-commit",
            "cp -n res/infrastructure/devel_settings.php config/settings.php",
            "cp -n res/infrastructure/devel_stack.yml docker-compose.yml",
            "docker-compose run --rm starter",
            "docker-compose exec -T pgsql sh -c \"psql -v ON_ERROR_STOP=1 -U postgres -d bicing_devel < /tmp/schema.sql\""
        ]
    }
}
